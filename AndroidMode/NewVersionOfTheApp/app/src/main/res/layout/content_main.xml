<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.tinovation.vb.tinovationclubsapp.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#529df8"
    android:backgroundTint="#529df8"
    android:fadeScrollbars="false"
    android:contextClickable="false"
    android:clickable="true"
    android:fitsSystemWindows="false"
    android:focusable="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Entry"
        android:id="@+id/studentView"
        android:clickable="true"
        android:capitalize="words"
        android:backgroundTint="#000000"
        android:hapticFeedbackEnabled="true"
        android:textColor="#ffffff"
        android:height="@dimen/abc_action_bar_default_height_material"
        android:longClickable="false"
        android:maxHeight="100dp"
        android:maxLength="100"
        android:theme="@style/AppTheme"
        android:typeface="sans"
        android:contextClickable="false"
        android:drawableTint="#ffffff"
        android:elegantTextHeight="false"
        android:enabled="false"
        android:onClick="hello"
        android:singleLine="false"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/ofiicerView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Officer Login"
        android:id="@+id/ofiicerView"
        android:textColor="#ffffff"
        android:hapticFeedbackEnabled="true"
        android:background="#529df8"
        android:backgroundTint="#529df8"
        android:capitalize="words"
        android:height="@dimen/abc_action_bar_default_height_material"
        android:maxHeight="100dp"
        android:typeface="sans"
        android:layout_marginBottom="66dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/studentView"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:contextClickable="true"
        android:drawableTint="#ffffff"
        android:elegantTextHeight="false"
        android:enabled="false"
        android:textStyle="bold"
        android:theme="@style/AppTheme"
        android:visibility="visible"
        android:focusableInTouchMode="true"
        android:onClick="hello" />
</RelativeLayout>
